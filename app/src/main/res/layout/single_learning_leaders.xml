<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="leadData"
            type="codes.malukimuthusi.gadsleaderboard.dataModels.LearningHours" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="@dimen/_16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/lead_learner_badge"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/badge_of_gads_top_learner"
                    android:src="@drawable/top_learner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lead_learner_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:text="@{leadData.name}"
                    app:layout_constraintStart_toEndOf="@id/lead_learner_badge"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/pharis_muigai" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lead_learner_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_marginTop="8dp"
                    android:text="@{leadData.country}"
                    app:layout_constraintStart_toEndOf="@id/lead_learner_badge"
                    app:layout_constraintTop_toBottomOf="@id/lead_learner_text"
                    tools:text="@string/pharis_muigai" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </FrameLayout>
</layout>